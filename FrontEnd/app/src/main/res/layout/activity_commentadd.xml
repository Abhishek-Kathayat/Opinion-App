<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_back"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginTop="22dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/opinion_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Opinion :"
            android:textColor="@color/colorBlue"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_toEndOf="@id/button_back"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"/>

        <RelativeLayout
            android:layout_margin="30dp"
            android:id="@+id/opinionadd_content"
            android:layout_below="@id/opinion_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_opinion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opinion :"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:textColor="@color/colorBlue" />

            <EditText
                android:id="@+id/editext_opinion"
                android:inputType="textMultiLine"
                android:background="@drawable/background_editext"
                android:lines="8"
                android:minLines="6"
                android:maxLines="10"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:layout_below="@id/textview_opinion"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGrey"
                android:gravity="top|start"/>

            <Button
                android:id="@+id/opinionsubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Opinion"
                android:padding="20dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/editext_opinion"
                android:layout_marginTop="50dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorBlue"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>